general {
  output_format = "i3bar"
  colors = true
  interval = 1
}

order += "spotify"
order += "volume master"
order += "tztime local"

tztime local {
  format = "%d %b, %H:%M:%S"
}

volume master {
        format = "♪: %volume"
        format_muted = "♪: muted (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

spotify {
    cache_timeout = 1
    format = "{artist} // {title}"
    format_down = "no Spotify"
}
